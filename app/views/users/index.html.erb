<section class="users-section">
  <ul class="users-list">
    <% @users.each do |user| %>
      <li class = 'user-item'>
        <%= image_tag(user.gravatar_url, size: '50x50')%>
        <div class="user-info">
          <b><i><%= user.name %></b></i>
          <span>
			<%= link_to 'See Profile',  user_path(user), class: 'profile-link' %>
            <%= user_index_friendship_status(user)%>
          </span>
        </div>
      </li>
    <% end %>
  </ul>
</section>
