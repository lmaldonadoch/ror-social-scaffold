<section class="user-section">
  <%= image_tag(@user.gravatar_url, size: '100x100')%>
  <h2><%= "#{@user.name}" %></h2> <br><br>

  <%= user_index_friendship_status(@user)%>
  
  <% if @user.id == current_user.id%>
    <% unless @user.pending_friends.empty? %>
      <u><h3>Pending friend requests:</h3></u><br>

      <% @user.pending_friends.each do |f|  %>
        <div class="user-invite show-requests">
          <%= link_to f.name, user_path(f.id)  %>
        </div> <br>
      <% end  %><br><br>

    <% end  %>	
    <% unless @user.friend_requests.empty? %>	
    <u><h3>Pending friend invitations:</h3></u><br>
    
      <% @user.friend_requests.each do |f|  %>
        <div class="user-friend show-requests">
          <%= link_to f.name, user_path(f.id)  %>
        </div>
        <%= link_to 'Accept', accept_path(:first_step, :friends_id => f.id),class: 'profile-link', method: :put %>
        <%= link_to 'Reject', reject_path(:first_step, :friends_id => f.id),class: 'profile-link', method: :delete %><br>
      <% end  %>
    <% end  %>
<% end  %>

  <article class="timeline">
    <h3>Recent posts:</h3>
    <ul class="posts">
      <% @user.posts.each do |post| %>
        <%next unless post.user_id == current_user.id || @user.friend?(current_user)%>
        <li class="post">
          <div>
            <div class='post-liking'>
              <span class='post-date'> <%= post.created_at.strftime("%Y/%m/%d") %> </span>
              <%= like_or_dislike_btn(post) %>
            </div>
          </div>
          <p class="post-content">
            <%= post.content %>
          </p>

          <div class='post-comments-section'>
            <% post.comments.each do |comment| %>
              <div class="post-comments">
                <p>
                  <b><%= comment.user.name %>:</b> <%= comment.content %>
                </p>
                <span> <%= comment.created_at.strftime("%Y/%m/%d") %> </span>
              </div>
            <% end %>

            <%= form_for(post.comments.new, url: post_comments_path(post)) do |form| %>
              <%= form.text_field :content, id: :comment_content, class: 'form-control', placeholder: 'Add new Comment' %>
              <%= form.submit 'Comment', class: 'btn btn-secondary' %>
            <% end %>
          </div>
        </li>
      <% end %>
    </ul>
  </article>
</section>
